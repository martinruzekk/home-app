<div class="modal" id="addItemTypeModal">
	<div class="modal-background"></div>
	<div class="modal-card">
		<header class="modal-card-head">
			<p class="modal-card-title">Přidat typ položky</p>
			<button class="delete" aria-label="close"></button>
		</header>
		<section class="modal-card-body">
			<div class="box">
				{{ form_start(addItemType) }}

				<div class="field">
					{{ form_label(addItemType.name) }}
					<div class="control">
						{{ form_widget(addItemType.name) }}
					</div>
				</div>


			</div>
