<div class="modal" id="addCompanyModal">
	<div class="modal-background"></div>
	<div class="modal-card">
		<header class="modal-card-head">
			<p class="modal-card-title">Přidat firmu</p>
			<button class="delete" aria-label="close"></button>
		</header>
		<section class="modal-card-body">
			<div class="box">
				<div class="field">
					<label class="label">Název
						<span class="has-text-danger">*</span>
					</label>
					<div class="control">
						<input type="text" class="input" id="addCompanyName">
					</div>
				</div>
				<div class="field">
					<label class="label">Ulice
						<span class="has-text-danger">*</span>
					</label>
					<div class="control">
						<input type="text" id="addCompanyStreet" name="street" class="input">
					</div>
				</div>
				<div class="field">
					<label class="label">Číslo popisné
						<span class="has-text-danger">*</span>
					</label>
					<div class="control">
						<input type="text" id="addCompanyStreetNumber1" name="streetnumber" class="input">
					</div>
				</div>
				<div class="field">
					<label class="label">Číslo orientační</label>
					<div class="control">
						<input type="text" id="addCompanyStreetNumber2" name="orientalnumber" class="input">
					</div>
				</div>
				<div class="field">
					<label class="label">Město
						<span class="has-text-danger">*</span>
					</label>
					<div class="control">
						<input type="text" id="addCompanyCity" name="city" class="input">
					</div>
				</div>
				<div class="field">
					<label class="label">PSČ
						<span class="has-text-danger">*</span>
					</label>
					<div class="control">
						<input type="text" id="addCompanyZip" name="zip" class="input">
					</div>
				</div>
				<div class="field">
					<label class="label">Stát
						<span class="has-text-danger">*</span>
					</label>
					<div class="control">
						<div class="select">
							<select id="addCompanyCountry" name="country">
								{% for country in allCountries %}
								<option value="{{ country.name }}">{{ country.name }}</option>
								{% endfor %}
							</select>
						</div>
					</div>
				</div>
				<div class="field">
					<label class="label">Logo URL</label>
					<div class="control">
						<input type="url" id="addCompanyLogoURL" name="logourl" class="input">
					</div>
				</div>
				<div class="field">
					<label class="label">Typ společnosti
						<span class="has-text-danger">*</span>
					</label>
					<div class="control">
						<input type="text" id="addCompanyType" name="type" class="input">
					</div>
				</div>
				<div class="field">
					<label class="label">Web společnosti</label>
					<div class="control">
						<input type="url" id="addCompanyUrl" name="url" class="input">
					</div>
				</div>
				<div class="field">
					<label class="label">Popis společnosti</label>
					<div class="control">
						<textarea name="desctiption" id="addCompanyDesc" rows="3" class="textarea"></textarea>
					</div>
				</div>
				<div class="field">
					<label class="label">Email společnosti</label>
					<div class="control">
						<input type="email" id="addCompanyEmail" name="email" class="input">
					</div>
				</div>
			</div>

		</section>
		<footer class="modal-card-foot">
			<button class="button is-success" id="addCompanySubmit">Přidat</button>
			<button class="button">Cancel</button>
		</footer>
	</div>
</div>
{% endblock %}