{% extends 'base.html.twig' %}

{% block title %}Inventář
{% endblock %}

{% block body %}
	<div class="container is-fluid">
		<div class="columns">
			<div class="column is-2">
				<aside class="menu">
					<h4 class="is-size-4 menu-label">
						Inventář
					</h4>
					<p class="menu-label">
						Položky
					</p>
					<ul class="menu-list">
						<li>
							<a>Seznam položek</a>
						</li>
						<li>
							<a id="addItemBtn">Přidat položku</a>
						</li>
						<li>
							<a id="addItemInfoBtn">Přidat kus</a>
						</li>
						<li>
							<a>Druhy položek</a>
						</li>
					</ul>
					<p class="menu-label">
						Místa
					</p>
					<ul class="menu-list">
						<li>
							<a>Geografické lokace</a>
							<ul>
								<li>
									<a href="">Přidat</a>
									<a href="">Spravovat</a>
								</li>
							</ul>
						</li>
						<li>
							<a>Místa v domě</a>
							<ul>
								<li>
									<a href="">Přidat</a>
									<a href="">Spravovat</a>
								</li>
							</ul>
						</li>
					</ul>
					<p class="menu-label">
						Firmy
					</p>
					<ul class="menu-list">
						<li>
							<a>Seznam firem</a>
						</li>
						<li>
							<a>Přidat firmu</a>
						</li>
						<li>
							<a>Spravovat frimy</a>
						</li>
					</ul>
				</aside>
			</div>
			<div class="is-10 mt-5">
				<div class="table-container">
					<table class="table">
						<thead>
							<tr>
								<th>
									<abbr title="Position">Pos</abbr>
								</th>
								<th>Team</th>
								<th>
									<abbr title="Played">Pld</abbr>
								</th>
								<th>
									<abbr title="Won">W</abbr>
								</th>
								<th>
									<abbr title="Drawn">D</abbr>
								</th>
								<th>
									<abbr title="Lost">L</abbr>
								</th>
								<th>
									<abbr title="Goals for">GF</abbr>
								</th>
								<th>
									<abbr title="Goals against">GA</abbr>
								</th>
								<th>
									<abbr title="Goal difference">GD</abbr>
								</th>
								<th>
									<abbr title="Points">Pts</abbr>
								</th>
								<th>Qualification or relegation</th>
							</tr>
						</thead>
						<tfoot>
							<tr>
								<th>
									<abbr title="Position">Pos</abbr>
								</th>
								<th>Team</th>
								<th>
									<abbr title="Played">Pld</abbr>
								</th>
								<th>
									<abbr title="Won">W</abbr>
								</th>
								<th>
									<abbr title="Drawn">D</abbr>
								</th>
								<th>
									<abbr title="Lost">L</abbr>
								</th>
								<th>
									<abbr title="Goals for">GF</abbr>
								</th>
								<th>
									<abbr title="Goals against">GA</abbr>
								</th>
								<th>
									<abbr title="Goal difference">GD</abbr>
								</th>
								<th>
									<abbr title="Points">Pts</abbr>
								</th>
								<th>Qualification or relegation</th>
							</tr>
						</tfoot>
						<tbody>
							<tr>
								<th>1</th>
								<td>
									<a href="https://en.wikipedia.org/wiki/Leicester_City_F.C." title="Leicester City F.C.">Leicester City</a>
									<strong>(C)</strong>
								</td>
								<td>38</td>
								<td>23</td>
								<td>12</td>
								<td>3</td>
								<td>68</td>
								<td>36</td>
								<td>+32</td>
								<td>81</td>
								<td>Qualification for the
									<a href="https://en.wikipedia.org/wiki/2016%E2%80%9317_UEFA_Champions_League#Group_stage" title="2016–17 UEFA Champions League">Champions League group stage</a>
								</td>
							</tr>
						</tbody>
					</table>
				</div>
				{#TODO sortable table#}
			</div>
		</div>
	</div>

	<div class="modal" id="addItemModal">
		<div class="modal-background"></div>
		<div class="modal-card">
			<header class="modal-card-head">
				<p class="modal-card-title">Modal title</p>
				<button class="delete" aria-label="close"></button>
			</header>
			<section class="modal-card-body">
				<div class="box">
					<div class="field">
						<div class="label">Název</div>
						<div class="control">
							<input type="text" class="input" placeholder="Název">
						</div>
					</div>
					<div class="field">
						<div class="label">Popis</div>
						<div class="control">
							<textarea name="itemDesctiption" id="itemDesctiption" rows="3" class="textarea"></textarea>
						</div>
					</div>
					<div class="field">
						<div class="label"></div>
						<div class="control">
							<div class="select">
								<select id="itemType"></select>
							</div>
						</div>
					</div>
					<div class="field">
						<div class="label">Počet</div>
						<div class="control">
							<input type="number" class="input" min="0">
						</div>
					</div>
					<div class="field">
						<div class="label">Výrobce</div>
						<div class="control">
							<div class="select">
								<select id="itemCompany"></select>
							</div>
						</div>
					</div>
				</div>
			</section>
			<footer class="modal-card-foot">
				<button class="button is-success">Save changes</button>
				<button class="button">Cancel</button>
			</footer>
		</div>
	</div>
{% endblock %}
